{
  "name": "日英自動翻訳",
  "version": "1.2",
  "description": "日本語⇔英語の翻訳をGoogle翻訳かDeeplで行います",
  "permissions": ["activeTab", "contextMenus", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/icon_16.png",
      "32": "images/icon_32.png",
      "48": "images/icon_48.png",
      "128": "images/icon_128.png"
    },
    "default_title": "日英自動翻訳"
  },
  "commands": {
    "google-translate": {
      "suggested_key": {
        "default": "Ctrl+Shift+G",
        "mac": "MacCtrl+Shift+G"
      },
      "description": "Call Google Translation"
    },
    "deepl-translate": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "MacCtrl+Shift+D"
      },
      "description": "Call Google Translation"
    }
  },
  "icons": {
    "16": "images/icon_128.png",
    "32": "images/icon_128.png",
    "48": "images/icon_128.png",
    "128": "images/icon_128.png"
  },
  "manifest_version": 3
}
